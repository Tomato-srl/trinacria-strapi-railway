{
    "$schema": "https://backboard.railway.app/railway.schema.json",
    "build": {
        "builder": "RAILPACK",
        "buildCommand": "npm ci && npm rebuild && npm run build"
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "variables": {
        "SWC_BINARY_PATH": "/app/node_modules/@swc/core-linux-x64-gnu/swc.linux-x64-gnu.node",
        "NODE_ENV": "production",
        "NPM_CONFIG_BUILD_FROM_SOURCE": "true"
    }
}